<div class="mb-6">
    <a href="/inventory/new" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
        Novo Produto
    </a>
</div>

<div class="mb-6 mt-4">
    <form method="POST" action="/inventory/getItems" class="flex space-x-4">
        <select
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="category" name="category" required>
            <option value="BEBIDAS">BEBIDAS</option>
            <option value="INSUMOS">INSUMOS</option>
            <option value="PRODUTO DE LIMPEZA">PRODUTO DE LIMPEZA</option>
            <option value="OUTROS">OUTROS</option>
        </select>

        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Pesquisar</button>
    </form>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categoria
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantidade
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Última
                    Movimentação</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            <% inventory.forEach(product=> { %>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <%= product.name %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <%= product.category %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <%= product.count %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <%= product.lastUpdated %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <a href="/inventory/<%= product._id %>/edit" class="text-indigo-600 hover:text-indigo-900"
                            aria-label="Editar produto">Editar</a>
                        <a href="/inventory/<%= product._id %>/delete" class="text-red-600 hover:text-red-900"
                            aria-label="Deletar produto">Deletar</a>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</div>