<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>
        <%= typeof title !=='undefined' ? title : 'Sistema de GestãoRural Hamburgueria' %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <%- typeof style !=='undefined' ? style : '' %>

</head>

<body class="bg-white flex flex-col min-h-screen">
    <%- include('partials/navbar') %>

        <main class="container mx-auto px-4 py-8 flex-grow">
            <h1 class="text-3xl font-bold mb-6">
                <%= typeof title !=='undefined' ? title : 'Sistema de GestãoRural Hamburgueria' %>
            </h1>
            <%- typeof body !=='undefined' ? body : '' %>
        </main>

        <footer class="bg-gray-700 text-white py-4 mt-8">
            <div class="container mx-auto px-4 text-center">
                <p>&copy; 2024 Sistema de Gestão de Rural Hamburgueria, John Roniel</p>
            </div>
        </footer>

        <%- typeof script !=='undefined' ? script : '' %>

            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const countElement = document.getElementById('count');
                    const countMinElement = document.getElementById('countMin');

                    if (countElement && countMinElement && parseInt(countElement) <= parseInt(countMinElement)) {
                        countElement.style.color = 'red';
                    }

                    document.querySelectorAll('#delete').forEach(function (button) {
                        button.addEventListener('click', function (event) {
                            event.preventDefault();
                            if (confirm('Deseja realmente excluir este item?')) {
                                window.location.href = button.getAttribute('href');
                            }
                        });
                    });
                });

            </script>
</body>

</html>