<div class="min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md max-w-lg w-full">
        <h1 class="text-2xl font-bold text-red-600 mb-4">Erro</h1>
        <div class="bg-red-50 border border-red-200 rounded p-4">
            <p class="text-red-700">
                <%= error.message || 'Ocorreu um erro inesperado.' %>
            </p>
            <% if (error.stack && process.env.NODE_ENV !=='production' ) { %>
                <pre class="mt-4 text-sm text-red-600 overflow-x-auto"><%= error.stack %></pre>
                <% } %>
        </div>
        <div class="mt-6">
            <a href="/" class="text-blue-500 hover:text-blue-700">← Voltar para a página inicial</a>
        </div>
    </div>
</div>